.side-bar
  .left-header
    .acount-area
      %h3.acount-area__user-name
        = current_user.name
      .acount-area__icon-area
        = link_to new_group_path, class: "acount-area__icon-area__btn" do
          %i.far.fa-edit
        = link_to edit_user_path(current_user), class: "acount-area__icon-area__btn"do
          %i.fas.fa-cog
  .group-list
    - current_user.groups.each do |group|
      .group-area
        = link_to group_messages_path(group) do
          .group-area__name
            = group.name
          .group-area__message
            = group.show_last_message